{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "strictPropertyInitialization": false,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    // TODO: Remove this. Can't be removed right now because tsc is somehow
    // seeing types mismatches in react node_modules code...
    "skipLibCheck": true,
    "incremental": true
  },
  "exclude": ["node_modules"]
}
